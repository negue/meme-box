{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-electron",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "files": [
    "electron-shell.ts",
    "preload.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
