{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@memebox/contracts": [
        "projects/contracts/src/public-api"
      ],
      "@memebox/app-state": [
        "projects/app-state/src/projects"
      ],
      "@memebox/action-variables": [
        "projects/action-variables/src/projects"
      ],
      "@memebox/action-variables/ui": [
        "projects/action-variables-ui/src/projects"
      ],
      "@memebox/app/env": [
        "src/environments/environment"
      ],
      "@memebox/app/env/modules": [
        "src/environments/modules/modules"
      ],
      "@memebox/utils": [
        "projects/utils/src/public-api"
      ],
      "@memebox/shared-state": [
        "projects/shared-state/src/public-api"
      ],
      "@memebox/version": [
        "src/version_info.json"
      ],
      "@memebox/ui-components": [
        "projects/ui-components/src/projects"
      ],
      "@memebox/state-components": [
        "projects/state-components/src/projects"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
