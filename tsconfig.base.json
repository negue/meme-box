{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@memebox/contracts": [
        "projects/contracts/src/public-api.ts"
      ],
      "@memebox/app/env": [
        "src/environments/environment.ts"
      ],
      "@memebox/app/env/modules": [
        "src/environments/modules/modules.ts"
      ],
      "@memebox/utils": [
        "projects/utils/src/public-api.ts"
      ],
      "@memebox/state": [
        "projects/state/src/public-api.ts"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/* .d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
